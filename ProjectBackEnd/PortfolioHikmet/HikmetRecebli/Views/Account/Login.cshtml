@{
    Layout = null;
}

@model SignInVM

<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Sign In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/resources/img/raja.png">
    <link rel="shortcut icon" type="image/png" href="~/resources/img/raja.png">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/css/metisMenu.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/slicknav.min.css">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="~/assets/css/typography.css">
    <link rel="stylesheet" href="~/assets/css/default-css.css">
    <link rel="stylesheet" href="~/assets/css/styles.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <!-- modernizr css -->
    <script src="~/assets/js/vendor/modernizr-2.8.3.min.js"></script>
    <link href="~/img/uversalfilo.png" rel="icon">
    <link href="~/img/uversalfilo.png" rel="apple-touch-icon">

    <style>
        body{
            overflow:hidden;
        }
    </style>

</head>

<body>


    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- login area start -->

    <div class="login-area login-bg" style="background: url(/assets/images/overlay-bg.jpg)">
        <div class="container">
            <div class="login-box ptb--100">
                <form method="post">
                    <div class="login-form-head">
                        <h4>Sign In</h4>
                        <p>Hello , Welcome Hikmət</p>
                    </div>
                    <div class="login-form-body">
                        <div class="form-gp">
                            <label asp-for="Email">Email address</label>
                            <input type="email" asp-for="Email">
                            <i class="ti-email"></i>
                            <span asp-validation-for="Email" class="d-block text-danger"></span>
                        </div>
                        <div class="form-gp">
                            <label asp-for="Password">Password</label>
                            <input type="password" asp-for="Password">
                            <i class="ti-lock"></i>
                            <span asp-validation-for="Password" class="d-block text-danger"></span>
                        </div>
                        <div class="row mb-4 rmber-area">
                            <div class="col-6">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                                    <label class="custom-control-label" asp-for="RememberMe">Remember Me</label>
                                </div>
                            </div>
                            <div class="col-6 text-right">
                                <a href="/Signin/ForgetPassword">Forgot Password?</a>
                            </div>
                        </div>
                        <div class="submit-btn-area">
                            <button id="form_submit" type="submit">Submit <i class="ti-arrow-right"></i></button>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl">
                    </div>/
                </form>
            </div>
        </div>
    </div>
    <!-- login area end -->
    <!-- jquery latest version -->
    <script src="~/assets/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/metisMenu.min.js"></script>
    <script src="~/assets/js/jquery.slimscroll.min.js"></script>
    <script src="~/assets/js/jquery.slicknav.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".form-gp input").each(function (x) {
                if ($(this).val() != "") {
                    $(this).focus()
                }
            })
        })
    </script>

    <!-- others plugins -->
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/scripts.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>

</html>
