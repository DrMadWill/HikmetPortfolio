@model Address

@{
    Layout = "_LayoutAdmin";
}
<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <!-- Textual inputs start -->
                <div class="col-12 mt-5">
                    <div class="card">
                        <form method="post" class="card-body">
                            <h4 class="header-title">Cahnge Address</h4>
                            <div class="form-group">
                                <input type="hidden" asp-for="Id" value="@Model.Id" />
                                <label asp-for="Location" class="col-form-label">Location</label>
                                <input class="form-control" asp-for="Location" value="@Model.Location" type="text">
                                <span class="text-danger" asp-validation-for="Location"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-form-label">Email</label>
                                <input class="form-control" asp-for="Email" value="@Model.Email" type="email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Number" class="col-form-label">Number</label>
                                <input class="form-control" asp-for="Number" value="@Model.Number" type="tel">
                                <span class="text-danger" asp-validation-for="Number"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
                        </form>
                    </div>
                </div>
                <!-- Textual inputs end -->
            </div>
        </div>
    </div>
</div>
